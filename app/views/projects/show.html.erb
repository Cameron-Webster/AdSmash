<%= link_to 'Destroy', project_image_path(img), method: :delete %> <br>

<% else %>

<%= cl_image_tag(img.photo, width: 100, height: 100, crop: :fill) %> <br>

<%= link_to('View comments',project_image_comments_path(@project,img)) %> <br>


<% end %>

<% end %>

