<%= link_to "step 1", new_project_path(project_id: @project.id) %>

<h1>Step 2</h1>

<%= simple_form_for(@project) do |f| %>
<%= f.error_notification %>
<%= hidden_field_tag :step, 2 %>

<div class="form-inputs">
  <%= f.input :brief %>
  <%= f.input :requirement %>
  <%= f.input :purpose %>
  <%= f.input :target %>
  <%= f.input :position %>

</div>
<div class="form-actions">
  <%= f.button :submit , "Create Project" %>
</div>
<% end %>


