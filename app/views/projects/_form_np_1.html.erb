<h1>Step 1</h1>

<%= simple_form_for(@project) do |f| %>
<%= f.error_notification %>
<%= hidden_field_tag :step, 1 %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :status, as: :hidden, default: "live" %>
  <%= f.input :deadline, as: :date %>
  <%= f.input :ad_networks %>
</div>
<div class="form-actions">
  <%= f.button :submit , "Step 2 >>" %>
</div>
<% end %>

